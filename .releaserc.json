{
  "branches": [
    {
      "name": "main"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "docker build -t openbao-plugin-secrets-nats/openbao-with-nats-secrets -f build/openbao/Dockerfile ."
      }
    ],
    [
      "@eclass/semantic-release-docker",
      {
        "baseImageName": "openbao-plugin-secrets-nats/openbao-with-nats-secrets",
        "registries": [
          {
            "url": "ghcr.io",
            "imageName": "ghcr.io/natzkalabsopensource/openbao-plugin-secrets-nats/openbao-with-nats-secrets",
            "user": "GITHUB_USER",
            "password": "GITHUB_TOKEN"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sh ./hack/semantic-release-patch-files.sh ${nextRelease.version}"
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/openbao/plugins/openbao-plugin-secrets-*"
          }
        ]
      }
    ]
  ]
}
